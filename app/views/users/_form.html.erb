
<div class="form-row">
  <div class="form-group col-md-4">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, type: 'first_name', class: "form-control", placeholder: "First name" %>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, type: 'last_name', class: "form-control", placeholder: "Last name" %>
  </div>
</div>


<div class="form-row">
  <div class="form-group col-md-4">
    <%= form.label :password, label: "password" %>
    <%= form.password_field :password, class: "form-control", placeholder: "8-12 characters" %>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: "form-control", placeholder: "Email" %>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-4">
    <%= form.label :birthday%>
    <%= form.date_field :birthday, class: "form-control", placeholder: "Birthday" %>
  </div>
  
  <div class="form-group col-md-4">
    <%= form.label :phone %>
    <%= form.text_field :phone, type: 'phone', class: "form-control", placeholder: "123-1234-123" %>
  </div>
</div>

<fieldset class="form-group">
  <div class="row">
    <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <%= form.radio_button :gender, 2 , class: "form-check-input"%>
          <%= form.label :gender, "Male", :value => "true", class: "form-check-label" %>
        </div>
        <div class="form-check">
          <%= form.radio_button :gender, 1, class: "form-check-input"%>
          <%= form.label :gender, "Female", :value => "false", class: "form-check-label"  %>
        </div>
    </div>
  </div>
</fieldset>

<div class="form-row">
  <div class="form-group col-md-4">
    <%= form.label :image%>
    <%= form.file_field :avatar , class: "form-control-file" %>
  </div>
</div>