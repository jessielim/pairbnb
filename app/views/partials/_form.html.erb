
<div class="text-field">
  <%= f.label :name %>
  <%= f.text_field :name, type: 'name' %>
</div>

<div class="text-field">
  <%= f.label :property_type %>
  <% types = ["House", "Entire Floor", "Condominium", "Villa", "Townhouse", "Castle", "Treehouse", "Igloo", "Yurt", "Cave", "Chalet", "Hut", "Tent", "Other"]%>
  <%= f.select :property_type, types %>
</div>

<div class="text-field">
  <%= f.label :room_number %>
  <% num = [1,2,3,4,5,6]%>
  <%= f.select :room_number, num %>
</div>

<div class="text-field">
  <%= f.label :bed_number %>
  <%= f.text_field :bed_number, type: 'bed_number' %>
</div>

<div class="text-field">
  <%= f.label :guest_number %>
  <%= f.text_field :guest_number, type: 'guest_number' %>
</div>

<div class="text-field">
  <%= f.label :country %>
  <%= f.text_field :country, type: 'country' %>
</div>

<div class="text-field">
  <%= f.label :state %>
  <%= f.text_field :state, type: 'state' %>
</div>

<div class="text-field">
  <%= f.label :city %>
  <%= f.text_field :city, type: 'city' %>
</div>

<div class="text-field">
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, type: 'zipcode' %>
</div>

<div class="text-field">
  <%= f.label :address %>
  <%= f.text_field :address, type: 'address' %>
</div>

<div class="text-field">
  <%= f.label :price %>
  <%= f.text_field :price, type: 'price' %>
</div>

<div class="text-field">
  <%= f.label :description %>
  <%= f.text_field :description, type: 'description' %>
</div>

<div class="field">
  <%= f.label :listing_image%>
  <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
</div>

<div class="text-field">
  <%= f.hidden_field :user_id, :value => current_user.id %>
</div>

